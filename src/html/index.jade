doctype html
html 
	head
		meta(http-equiv="X-UA-Compatible" content="chrome=1")
		meta(http-equiv="Content-Type" content="text/html;charset=utf-8")
		title X3DOM Test 6
		script(type="text/javascript" src="http://mbostock.github.com/d3/d3.js")
		script(type="text/javascript" src="http://x3dom.org/x3dom/example/x3dom.js")
		
		link(rel="stylesheet" type="text/css" href="css/main.min.css")
	
	body
		- var iterator = 0
		div.rack-view-options.fltLeft
			h2 Camera Options:
			div.buttons.camera-Option
				- var cameraChoice = ["Top View", "Front View", "Side View", "Back View", "Perspective"]
				- for (iterator = 0; iterator < cameraChoice.length; iterator++)
					if !iterator
						input.button(type="button" class=" selected-view" value=cameraChoice[iterator])
					else
						input.button(type="button" value=cameraChoice[iterator])
			
			h2 Color Options:
			div.buttons.color-Option
				- var colorChoice = ["Power", "Weight", "Temperature"]
				- for (iterator = 0; iterator < colorChoice.length; iterator++)
					if !iterator
						input.button(type="button" class=" selected-color" value=colorChoice[iterator])
					else
						input.button(type="button" value=colorChoice[iterator])
			
			h2 Other Options:
			div.formGroup
				label(for="gridToggle") Grid:
				input.checkbox(type="checkbox" id="gridToggle"  checked="true")

		div.fltClear
		x3d#x3dElement.fltLeft
		div#rack-Data
			h2 Rack Information:
			ul.alignRight.fltLeft
				each descriptor in ["Component ID", "Name", "Power (C/P/M)", "Temperature (C/P/M)", "Weight (C/P/M)", "Used Units (C/P)","Largest Unit Location", "Largest Unit Size", "Power Actual Derivation"]
					li= descriptor + ": "

			ul(class="fltRight")
				li#ComponentID-Data 1471
				li#Name-Data 50M
				li#Power-Data 115/0/300
				li#Temperature-Data 16/0/35000
				li#Weight-Data 16/0/500
				li#UsedUnits-Data 1/0
				li#UnitLocation-Data 1
				li#UnitSize-Data 41
				li#PowerAD-Data 115
			p.fltClear.footNotes *C - Current, P - Planned, M - Max
			br/
			h2 Rack Leaders:

		script(src="js/main.js")